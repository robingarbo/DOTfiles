#!/usr/bin/python
import sys, os
import fileinput
import signal

def usage():
    print("Usage: ")
    print("  charrange [index]")
    print("  [index] is Python style, e.g. 1:, 1:3, :-1 ....")

if __name__ == '__main__':
    # deal with options
    if (len(sys.argv) < 2):
        print("No options!")
        usage()
        sys.exit(1)

    signal.signal(signal.SIGPIPE, signal.SIG_DFL)

    # output
    index = sys.argv[1]
    fileList = sys.argv[2:]
    if (len(fileList) == 0):
        fileList= ("-",)

    for line in fileinput.input(fileList):
        line=line.strip()
        print eval("line[" + index + "]")
    
